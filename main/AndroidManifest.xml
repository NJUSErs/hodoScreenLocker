<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="njusoftware.hodoScreenLocker">

    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 锁屏的activity进行了一些修改：唯一实例、单独Task、从最近程序中排除 -->
        <activity
            android:name=".Main.LockedScreenActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:noHistory="true"
            android:taskAffinity="njusoftware.LockedScreen"></activity>

        <activity android:name=".Main.UserCenterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".Main.BackgroundService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>
